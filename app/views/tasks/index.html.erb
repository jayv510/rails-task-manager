<html>
<head>
  <meta charset="UTF-8">
  <title>Index</title>
</head>
  <body>
    <h1>My Tasks</h1>
    <% @tasks.each do |task| %>
    <div class="form-group">
    <p><input type ="checkbox" checked>
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
    </div>
    <% end %>

    <p><%= link_to "+ Add a new task", new_task_path %></p>

  </body>
</html>
